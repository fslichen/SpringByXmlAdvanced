<?xml version="1.0" encoding="utf-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:util="http://www.springframework.org/schema/util"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        				http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-4.2.xsd
        				http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd">
   <!-- Enable annotations under the base package. -->
   <!-- @Component, @Controller, @Service and @Repository are scanned. -->
   <!-- Once scanned, they are created as beans and handed over to the spring container. -->
   <context:component-scan base-package="evolution.annotation" />
</beans>